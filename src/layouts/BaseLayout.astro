---
const { title = "Bluebonnet CyberWorks" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content="Cybersecurity compliance, training, and advisory services." />
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body class="bg-white text-gray-900 antialiased">
   
    <!-- Header -->
    <header class="w-full border-b border-gray-200 bg-white py-4 px-6">
      <div class="max-w-7xl mx-auto flex justify-between items-center">
        <a href="/" class="text-2xl font-bold text-blue-900">Bluebonnet CyberWorks</a>
        <nav class="hidden md:flex gap-6 text-sm text-blue-800">
          <a href="/services" class="hover:underline">Services</a>
          <a href="/about" class="hover:underline">About</a>
          <a href="/contact" class="hover:underline">Contact</a>
        </nav>
      </div>
    </header>

    <!-- Main content slot -->
    <main class="max-w-7xl mx-auto px-6 py-12">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="mt-12 py-6 text-center text-sm text-gray-500 border-t border-gray-200">
      &copy; {new Date().getFullYear()} Bluebonnet CyberWorks. All rights reserved.
    </footer>
  </body>
</html>
