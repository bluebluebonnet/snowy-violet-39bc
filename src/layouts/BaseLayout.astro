---
const { title = "Page Title" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="bg-sky-50 text-sky-900">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body class="min-h-screen flex flex-col font-sans">

    <!-- Header -->
    <header class="bg-white shadow-sm">
      <div class="max-w-7xl mx-auto px-4 py-4 sm:px-6 lg:px-8 flex justify-between items-center">
        <h1 class="text-xl font-bold text-sky-800">YourBrand</h1>
        <!-- Navigation goes here -->
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-1">
      <div class="max-w-5xl mx-auto px-4 py-10 sm:px-6 lg:px-8">
        <slot />
      </div>
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t border-sky-100 mt-12">
      <div class="max-w-7xl mx-auto px-4 py-6 sm:px-6 lg:px-8 text-sm text-sky-600 text-center">
        &copy; {new Date().getFullYear()} YourBrand. All rights reserved.
      </div>
    </footer>

  </body>
</html>
