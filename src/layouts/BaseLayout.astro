---
const { title = "Bluebonnet CyberWorks" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body class="bg-white text-gray-900 antialiased">
    <header class="border-b border-gray-200 py-4 px-6">
      <div class="max-w-7xl mx-auto flex items-center justify-between">
        <a href="/" class="text-xl font-bold text-blue-900">Bluebonnet CyberWorks</a>
        <!-- Optional: Nav links -->
        <nav class="hidden md:flex gap-4 text-sm text-blue-800">
          <a href="/services" class="hover:underline">Services</a>
          <a href="/about" class="hover:underline">About</a>
          <a href="/contact" class="hover:underline">Contact</a>
        </nav>
      </div>
    </header>

    <main class="px-6 md:px-12 py-12 max-w-7xl mx-auto">
      <slot />
    </main>

    <footer class="border-t border-gray-200 text-sm text-center text-gray-500 py-6 mt-12">
      &copy; {new Date().getFullYear()} Bluebonnet CyberWorks. All rights reserved.
    </footer>
  </body>
</html>
